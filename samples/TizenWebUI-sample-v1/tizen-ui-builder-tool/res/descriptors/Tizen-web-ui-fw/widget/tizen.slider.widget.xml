	<xsl-for-output xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
		<xsl:template match="tizen.slider">
			<input type="range">
				<xsl:call-template name="print-part-id"/>
				<xsl:apply-templates select="@*" mode="simple-property"/>
			</input>
		</xsl:template>
	</xsl-for-output>
</widget>
